# Development Environment Configuration
# Copy this file to .env and update the values for your local development
# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
APP_LOG_LEVEL=debug
APP_NAME=Master Data REST API
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Driver: mysql, postgres, sqlite
DB_DRIVER=mysql
# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=master_data_dev
DB_USER=root
DB_PASSWORD=password
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local
DB_SSL_MODE=disable
# PostgreSQL Configuration (if using postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=master_data_dev
# DB_USER=postgres
# DB_PASSWORD=password
# DB_CHARSET=utf8
# DB_PARSE_TIME=true
# DB_LOC=UTC
# DB_SSL_MODE=disable
# SQLite Configuration (if using sqlite)
# DB_DRIVER=sqlite
# DB_NAME=./data/master_data.db
# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# =============================================================================
# REDIS CONFIGURATION (for rate limiting and caching)
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5
REDIS_READ_TIMEOUT=3
REDIS_WRITE_TIMEOUT=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_for_development_only
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h
# Password Hashing
BCRYPT_COST=10
# API Security
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=1m
API_KEY_HEADER=X-API-Key
API_KEY=dev_api_key_123
# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_EXPOSED_HEADERS=Content-Length,Content-Range
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=10
LOG_COMPRESS=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics
# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
# Tracing (OpenTelemetry)
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=master-data-api
OTEL_SERVICE_VERSION=1.0.0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Master Data API
# File Storage (AWS S3)
S3_ENABLED=false
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_ENDPOINT=https://s3.amazonaws.com

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Master Data REST API
SWAGGER_DESCRIPTION=A REST API for managing master data
SWAGGER_VERSION=1.0.0
SWAGGER_HOST=localhost:8080
SWAGGER_BASEPATH=/api/v1
# Database Seeding
SEED_ENABLED=true
SEED_FILE_PATH=./data/seed.json
SEED_CLEAR_ON_START=false
# Auto Migration
AUTO_MIGRATE=true
MIGRATION_SOURCE=./migrations

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DB_DRIVER=mysql
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=master_data_test
TEST_DB_USER=root
TEST_DB_PASSWORD=password
TEST_DB_CHARSET=utf8mb4
# Test Coverage
TEST_COVERAGE_ENABLED=true
TEST_COVERAGE_THRESHOLD=80
TEST_TIMEOUT=30s

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Response Caching
CACHE_ENABLED=false
CACHE_TTL=300
CACHE_MAX_SIZE=1000
# Database Query Caching
DB_QUERY_CACHE_ENABLED=false
DB_QUERY_CACHE_TTL=60
# Compression
GZIP_ENABLED=true
GZIP_LEVEL=6
GZIP_MIN_SIZE=1024

# =============================================================================
# NOTIFICATIONS & WEBHOOKS
# =============================================================================
# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#general
SLACK_USERNAME=Master Data API Bot
# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL
# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_TIMEOUT=10s
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5s

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable specific features
FEATURE_SOFT_DELETE=true
FEATURE_AUDIT_LOGGING=true
FEATURE_DATA_VALIDATION=true
FEATURE_BULK_OPERATIONS=true
FEATURE_SEARCH=true
FEATURE_EXPORT=true
FEATURE_IMPORT=true

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Override default timeouts for development
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=60s
# Development-specific settings
DEV_MODE=true
DEV_SKIP_AUTH=false
DEV_SKIP_RATE_LIMIT=false
DEV_FAST_RELOAD=true

# =============================================================================
# COMMENTS & NOTES
# =============================================================================
# This file contains all possible configuration options
# Remove or comment out sections you don't need
# Always use strong, unique passwords in production
# Never commit .env files to version control
# Use environment-specific files: .env.development, .env.production, etc.
# =============================================================================
# QUICK START
# =============================================================================
# 1. Copy this file to .env
# 2. Update database credentials
# 3. Set JWT_SECRET to a secure random string
# 4. Update CORS origins if needed
# 5. Enable Redis for rate limiting (set REDIS_ENABLED=true)
# 6. Run: make run 